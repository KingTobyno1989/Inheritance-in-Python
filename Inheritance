class User():
    def sign_in(self):
        print('Logged-in')

class Wizard(User):
    def __init__(self) -> None:
        super().__init__(self, name, power)
        self.name = name
        self.power = power

    def attack(self):
        print(f'attacking with power of {self.power}')

class Acher(User):
    def __init__(self) -> None:
        super().__init__(self, name, num_arrows)
        self.name = name
        self.num_arrows = num_arrows

    def attack(self):
        print(f'attacking with arrows: arrows left- {self.num_arrows}')

    

Wizard1 = Wizard('Merlin', 50)
Acher1 = Acher('Robin', 150)
Wizard1.attack()
Acher1.attack()
